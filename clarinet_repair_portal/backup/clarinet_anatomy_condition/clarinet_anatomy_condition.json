{
  "doctype": "DocType",
  "name": "Clarinet Anatomy Condition",
  "module": "clarinet_repair_portal",
  "custom": 1,
  "istable": 1,
  "autoname": "field:clarinet_part",
  "editable_grid": 1,
  "fields": [
    {
      "fieldname": "clarinet_part",
      "fieldtype": "Select",
      "label": "Clarinet Part",
      "options": "Barrel\nUpper Joint\nLower Joint\nBell\nMouthpiece\nKeys\nPads\nSprings\nRods\nCorks"
    },
    {
      "fieldname": "condition",
      "fieldtype": "Select",
      "label": "Condition",
      "options": "New\nGood\nWorn\nDamaged\nBroken\nMissing"
    },
    {
      "fieldname": "action_required",
      "fieldtype": "Select",
      "label": "Action Required",
      "options": "None\nCleaning\nAdjustment\nRepair\nReplacement"
    },
    {
      "fieldname": "recommended_part",
      "fieldtype": "Link",
      "label": "Recommended Part",
      "options": "Item",
      "depends_on": "eval:doc.action_required=='Replacement'"
    },
    {
      "fieldname": "estimated_cost",
      "fieldtype": "Currency",
      "label": "Estimated Cost"
    },
    {
      "fieldname": "part_image",
      "fieldtype": "Attach Image",
      "label": "Part Image"
    },
    {
      "fieldname": "notes",
      "fieldtype": "Small Text",
      "label": "Notes"
    }
  ],
  "permissions": [
    {
      "role": "Repair Technician",
      "read": 1,
      "write": 1
    },
    {
      "role": "Repair Administrator",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1,
      "submit": 1
    },
    {
      "role": "Reception",
      "read": 1,
      "write": 1,
      "create": 0,
      "delete": 0,
      "submit": 1
    }
  ],
  "is_submittable": 1
}
